modules = ["nodejs-20", "php-8.2", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel App"

[[workflows.workflow]]
name = "Laravel App"
author = "agent"

[[workflows.workflow.tasks]]
